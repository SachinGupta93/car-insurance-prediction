{
  "rules": {
    // Allow read access to root for authenticated users to access legacy data
    ".read": "auth != null",
    ".write": "auth != null",
    
    // Individual records at root level (legacy data)
    "$record_id": {
      ".read": "auth != null && (root.child($record_id).child('userId').val() == auth.uid || !root.child($record_id).child('userId').exists())",
      ".write": "auth != null && (root.child($record_id).child('userId').val() == auth.uid || !root.child($record_id).child('userId').exists())"
    },
    
    "users": {
      "$uid": {
        // Users can read and write their own data
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid",
        
        "analysis_history": {
          ".read": "auth != null && auth.uid == $uid",
          ".write": "auth != null && auth.uid == $uid",
          "$record_id": {
            ".read": "auth != null && auth.uid == $uid",
            ".write": "auth != null && auth.uid == $uid"
          }
        },
        
        "vehicles": {
          ".read": "auth != null && auth.uid == $uid", 
          ".write": "auth != null && auth.uid == $uid",
          "$vehicle_id": {
            ".read": "auth != null && auth.uid == $uid",
            ".write": "auth != null && auth.uid == $uid"
          }
        },
        
        "insurance": {
          ".read": "auth != null && auth.uid == $uid",
          ".write": "auth != null && auth.uid == $uid",
          "$insurance_id": {
            ".read": "auth != null && auth.uid == $uid",
            ".write": "auth != null && auth.uid == $uid"
          }
        },
        
        "profile": {
          ".read": "auth != null && auth.uid == $uid",
          ".write": "auth != null && auth.uid == $uid"
        }
      }
    }
  }
}